{{>layouts/header}}
<div class="container">
    <form>
        <table class="table table-hover">
            <thead>
            <tr>
                <th scope="col">번호</th>
                <th scope="col">제목</th>
                <th scope="col">내용</th>
                <th scope="col">작성 날짜</th>
            </tr>
            </thead>
            <tbody>
            {{#articleList}}
            <tr>
                <th scope="row">{{id}}</th>
                <td><a href="/board/{{id}}/view">{{title}}</td>
                <td>{{content}}</td>
                <td>{{postdate}}</td>
            </tr>
            {{/articleList}}
            </tbody>
        </table>
        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
            <a class="btn btn-primary" href="/board/new" role="button">글쓰기</a>
        </div>
    </form>
</div>
{{>layouts/footer}}